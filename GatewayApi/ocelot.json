{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/user/authenticate",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3003
        }
      ],
      "UpstreamPathTemplate": "/user/authenticate",
      "UpstreamHttpMethod": [ "Post" ]
    },
    {
      "DownstreamPathTemplate": "/api/customers/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3001
        }
      ],
      "UpstreamPathTemplate": "/customers/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "Key": "customer",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "userType": "admin"
      }
    },
    {
      "DownstreamPathTemplate": "/api/orders/customer/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3002

        }
      ],
      "UpstreamPathTemplate": "/orders/customer/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "Key": "orders-by-customer",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ],
  "Aggregates": [
    {
      "ReRouteKeys": [
        "customer",
        "orders-by-customer"
      ],
      "UpstreamPathTemplate": "/api/orders-by-customer/{id}",
      "Aggregator": "CustomerWithOrdersAggregator"
    }
  ],
  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId"

  }
}